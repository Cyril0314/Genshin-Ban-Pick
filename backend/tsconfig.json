{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true              
  },
  "include": ["src/**/*", "prisma/**/*.ts"],
  "exclude": ["dist", "public", "node_modules"]
}