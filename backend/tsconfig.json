{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "@shared/*": ["../shared/*"],
    }
  },
  "ts-node": {
    "esm": true              
  },
  "include": ["test/**/*", "src/**/*", "prisma/**/*.ts", "types", "../shared/**/*.ts"],
  "exclude": ["dist", "public", "node_modules"]
}