generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1) 基本欄位（id, createdAt, updatedAt ...）
// 2) Domain fields（和商業邏輯有關的欄位）
// 3) 外鍵欄位 (xxxId)
// 4) Relation 欄位（relation(...))
// 5) Array Relations (一對多 / 多對多)
// 6) Indexes / Constraints / @@index

enum MemberRole {
  User
  Owner
  Admin
}

model Member {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account      String     @unique
  nickname     String
  passwordHash String
  role         MemberRole @default(User)

  MatchTeamMember MatchTeamMember[]
}

model Guest {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  nickname String

  MatchTeamMember MatchTeamMember[]
}

model Match {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  flowVersion Int @default(1)

  teams MatchTeam[]
  moves MatchMove[]
}

model MatchTeam {
  id Int @id @default(autoincrement())

  teamSlot Int
  name     String?

  matchId Int

  match       Match             @relation(fields: [matchId], references: [id], onDelete: Cascade)
  teamMembers MatchTeamMember[]
  MatchMove   MatchMove[]
}

model MatchTeamMember {
  id Int @id @default(autoincrement())

  slot Int?
  name String
  
  teamId    Int
  memberRef Int?
  guestRef  Int?

  team           MatchTeam            @relation(fields: [teamId], references: [id], onDelete: Cascade)
  member         Member?              @relation(fields: [memberRef], references: [id])
  guest          Guest?               @relation(fields: [guestRef], references: [id])
  tacticalUsages MatchTacticalUsage[]

  @@index([teamId, memberRef])
  @@index([teamId, guestRef])
}

model MatchTacticalUsage {
  id Int @id @default(autoincrement())

  modelVersion Int @default(1)
  setupNumber  Int

  teamMemberId Int
  characterKey String

  teamMember MatchTeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)
  character  Character       @relation(fields: [characterKey], references: [key])

  @@index([teamMemberId, setupNumber])
  @@index([setupNumber])
}

enum MoveType {
  Ban
  Pick
  Utility
}

enum MoveSource {
  Manual
  Random
}

model MatchMove {
  id Int @id @default(autoincrement())

  order  Int
  type   MoveType
  source MoveSource @default(Manual)

  matchId      Int
  teamId       Int?
  characterKey String

  match             Match              @relation(fields: [matchId], references: [id], onDelete: Cascade)
  team              MatchTeam?         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  character         Character          @relation(fields: [characterKey], references: [key])
  randomMoveContext RandomMoveContext?

  @@index([matchId, order])
  @@index([characterKey])
  @@index([teamId, characterKey])
}

model RandomMoveContext {
  id          Int       @id @default(autoincrement())

  filters     Json?

  matchMoveId Int       @unique
  
  matchMove   MatchMove @relation(fields: [matchMoveId], references: [id], onDelete: Cascade)
  
}

enum Rarity {
  FourStar
  FiveStar
}

enum Element {
  Anemo
  Geo
  Electro
  Dendro
  Pyro
  Hydro
  Cryo
  None
}

enum Weapon {
  Sword
  Claymore
  Polearm
  Bow
  Catalyst
}

enum Region {
  Mondstadt
  Liyue
  Inazuma
  Sumeru
  Fontaine
  Natlan
  NodKrai
  Snezhnaya
  Khaenriah
  None
}

enum ModelType {
  TallMale
  TallFemale
  MediumMale
  MediumFemale
  ShortFemale
  None
}

enum CharacterRole {
  MainDPS
  SubDPS
  Support
}

enum Wish {
  Standard
  Limited
  None
}

model Character {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  key       String   @unique
  name      String
  rarity    Rarity
  element   Element
  weapon    Weapon
  region    Region
  modelType ModelType
  role        CharacterRole?
  wish        Wish?
  releaseDate DateTime?
  version     String?

  matchMoves          MatchMove[]
  matchTacticalUsages MatchTacticalUsage[]
}
